<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:id="@+id/instance_list_item"
                android:background="@drawable/header_bg"
        >
    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_name" android:text="Instance Name" android:layout_weight="1"
              android:gravity="center" android:textStyle="bold"
              android:padding="6dip"/>

    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_connected" android:width="100dip" android:text="# connected"
              android:gravity="center" android:textStyle="bold"
              android:padding="6dip"/>

    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_startdate" android:width="130dip" android:text="Start time"
              android:gravity="center" android:textStyle="bold"
              android:padding="6dip"/>
</LinearLayout>