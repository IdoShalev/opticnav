<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:id="@+id/instance_list_item"
        >
    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_name" android:text="A really really long instance name" android:layout_weight="1"
              android:gravity="center_vertical" android:textStyle="bold"
              android:padding="6dip"/>

    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_connected" android:width="100dip" android:text="327"
              android:gravity="center" android:background="#f0f0f0"
              android:padding="6dip"/>

    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent"
              android:id="@+id/instance_list_item_startdate" android:width="130dip" android:text="2 minutes ago"
              android:gravity="center"
              android:padding="6dip"/>
</LinearLayout>